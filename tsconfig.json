{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@response/*": [
        "src/common/response/*"
      ],
      "@error/*": [
        "src/common/error/*"
      ],
      "@helpers/*": [
        "src/common/helpers/*"
      ],
      "@middlewares/*": [
        "src/common/middlewares/*"
      ],
      "@logger/*": [
        "src/common/logger/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}